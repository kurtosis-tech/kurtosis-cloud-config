[Unit]
Description=Kurtosis Portal Daemon
Documentation=https://kurtosis.com
After=docker.service
Wants=ndocker.service

[Service]
Type=simple
ExecStart=/root/kurtosis-portal --server-only --tls-ca /root/ca.pem --tls-server-cert /root/server-cert.pem --tls-server-key /root/server-key.pem
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
RestartSec=2
Restart=always

SyslogIdentifier=kurtosis-portal

[Install]
WantedBy=multi-user.target
